<h1>{{title}}</h1>
<p><a href='/'>Home</a></p>
<p>Edit post {{id}}</p>
<p>This page should only be accessible by the author of the post</p>


<div class="row">
  <div class="col-xs-12 col-md-8">

    <form method="POST" action="/posts/{{id}}/edit">
      <fieldset class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name='title' id="title" placeholder="Title" value='{{post.title}}'>
      </fieldset>
      <fieldset class="form-group">
        <label for="lat">Location Latitude</label>
        <input type="text" class="form-control" name='lat' id="lat" placeholder="Latitude" value='{{post.lat}}'>
      </fieldset>
      <fieldset class="form-group">
        <label for="lng">Location Longitude</label>
        <input type="text" class="form-control" name='lng' id="lng" placeholder="Longitude" value='{{post.lng}}'>
      </fieldset>
      <fieldset class="form-group">
        <label for="img_link">Image Link</label>
        <input type="text" class="form-control" name='img_link' id="img_link" placeholder="Paste Image URL" value='{{post.imgLink}}'>
      </fieldset>
      <fieldset class="form-group">
        <label for="description">Post</label>
        <textarea class="form-control" name='description' id="description" placeholder="Type Your Post Here">{{post.description}}</textarea>
      </fieldset>
      <input type="submit" name="submit" class="btn btn-primary btn-lg" value="Post">
    </form>

  </div>

</div>
