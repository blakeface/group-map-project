<div class="login-container col-md-6 col-md-offset-3 col-xs-12">

  {{#message}}
  <p class="login-message">{{this}}</p>
  {{/message}}

  <h1>Login</h1>
  <p>
    Don't have an account? <a href="/signup">Click Here to signup!</a>
  <p>

  {{#if user}}
  <p>
    Hello {{user.username}}
    |
    <!-- <a href="/auth/logout">Logout</a> -->
  </p>
  {{else}}
  <p>
    <a href="/auth/github">Login With GitHub</a>
  </p>

  <form method="POST" action="/auth/login">
    <fieldset class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" {{#if username}} value='{{username}}' {{/if}} name='username' id="username" autofocus="true">
    </fieldset>
    <fieldset class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name='password' id="password">
    </fieldset>

    <input type="submit" class="btn btn-primary btn-lg" value="Login">
  </form>
  {{/if}}

</div>
