{{#if errors}}
<ul>
  {{#errors}}
  <li class='error'>{{this}}</li>
  {{/errors}}
</ul>
{{/if}}

<div class="post-details col-md-8 col-md-offset-2 col-xs-12">
  {{#post}}
  <div class="post-title">
    <div class="post-title-container">
      <h1>{{title}}</h1>
      <a href="/posts/{{id}}/edit">
        <button type="button" class="btn btn-default" name="edit">EDIT</button>
      </a>
    </div>
    <div class="post-rating-container">
      <h3 class="rating">{{rating}}</h3>
      <form method="POST" action="/posts/{{id}}/upvote">
        <input type="image" src="/images/uparrow-green.png">
      </form>
      <form method="POST" action="/posts/{{id}}/downvote">
        <input type="image" src="/images/downarrow-red.png">
      </form>
    </div>
  </div>

  <div class="post-map-image">
    <img src="{{img_link}}" alt="" />
    <div class="post-map" id="map"></div>
  </div>

  <p class="post-description">{{description}}</p>
  {{/post}}

  <h2>Comments</h2>
  <hr>
  {{#comments}}
  <div class="comment-box">
    <p>{{username}} says:</p>
    <p class='comment-text'>{{comment}}</p>
    <div class="comment-footer">
      <p class="comment-name">COMMENTER NAME</p>
      <p>{{created_at}}</p>
    </div>
  </div>
  <hr>
  {{/comments}}

  <h2>Leave a Comment!</h2>
  <form method="POST" action="/posts/comments/add/{{id}}">
    <fieldset class="form-group">
      <label for="comment">Comment</label>
      <textarea class="form-control" name='comment' id="comment" placeholder="Type Your Comment Here!"></textarea>
    </fieldset>
    <input type="submit" class="btn btn-primary btn-lg" value="Comment">
  </form>

</div>
